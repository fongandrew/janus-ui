{
  "name": "janus-ui",
  "version": "1.0.0",
  "description": "Scaffolding / UI components meant for use with both SolidJS and vanilla JS",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "eslint": "eslint --report-unused-disable-directives --max-warnings 0",
    "eslint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "npm run eslint && npm run stylelint",
    "stylelint": "stylelint \"src/**/*.css\"",
    "stylelint:fix": "stylelint --fix \"src/**/*.css\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/apca-w3": "^0.1.3",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/eslint-plugin": "^1.1.38",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-css-class-usage": "github:fongandrew/eslint-plugin-css-class-usage",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.5",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-solid": "^0.14.4",
    "jsdom": "^25.0.1",
    "polished": "^4.3.1",
    "postcss": "^8.5.1",
    "postcss-mixins": "^11.0.3",
    "prettier": "^3.3.3",
    "purgecss": "^7.0.2",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.3",
    "stylelint-value-no-unknown-custom-properties": "^6.0.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.28.0",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^6.2.2",
    "vite-plugin-solid": "^2.11.0",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.12",
    "apca-w3": "^0.1.9",
    "classix": "^2.2.0",
    "colorparsley": "^0.1.8",
    "dayjs": "^1.11.13",
    "eslint-plugin-async-event": "github:fongandrew/eslint-plugin-async-event",
    "js-sha256": "^0.11.0",
    "lucide-solid": "^0.468.0",
    "solid-js": "^1.9.3"
